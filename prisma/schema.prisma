generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("MONGODB_URI")
}

model User {
    id            String         @id @default(auto()) @map("_id") @db.ObjectId
    name          String?
    email         String         @unique
    emailVerified Boolean?
    password      String
    Category      Category[]
    ShoppingItem  ShoppingItem[]
}

